    "dependencies": {
        "element-plus": "^2.11.5",
        "vue": "^3.5.22"
    },
    "devDependencies": {
        "@wxt-dev/module-vue": "^1.0.3",
        "typescript": "^5.9.3",
        "vue-tsc": "^3.1.1",
        "wxt": "0.20.9"
    },
    "overrides": {
        "@wxt-dev/storage": "1.2.0"
    }
